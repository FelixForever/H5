<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:gravity="center_vertical"
        android:background="@color/title_bg_color" >

        <ImageView
            android:id="@+id/header_left_back_iv"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="@dimen/title_bar_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="@dimen/large_space"
            android:src="@drawable/icon_back_selector" />

        <TextView
            android:id="@+id/header_title_tv"
            android:layout_width="wrap_content"
            android:text="选择图片"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/title_bar_height"
            android:layout_marginRight="@dimen/title_bar_height"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="20sp" />

        <Button
            android:id="@+id/header_right_btn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/large_space"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_item_selector"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#FFF9F9F9"
            android:text="完成" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/splite_line_color" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:listSelector="@null" />

</LinearLayout>