<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Light.FullScreenDialogAct" parent="@style/BaseDialog">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />

    <!-- common text style white -->
    <style name="white_text_with_shadow">

        <!--
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        -->
        <item name="android:textColor">#ffffff</item>
        <!-- <item name="android:shadowColor">#000000</item> -->
    </style>

    <!-- common text style gray -->
    <style name="gray_text_with_shadow">
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#ffffff</item>
    </style>

    <!-- common text style black -->
    <style name="black_text_with_shadow">
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#ffffff</item>
    </style>

    <!-- common text style white list -->
    <style name="small_s_white_text" parent="@style/white_text_with_shadow">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="small_white_text" parent="@style/white_text_with_shadow">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="middle_white_text" parent="@style/white_text_with_shadow">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="large_white_text" parent="@style/white_text_with_shadow">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- common text style black list -->
    <style name="small_black_text" parent="@style/black_text_with_shadow">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="middle_black_text" parent="@style/black_text_with_shadow">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="large_black_text" parent="@style/black_text_with_shadow">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="large_x_black_text" parent="@style/black_text_with_shadow">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- common text style light black list -->
    <style name="middle_light_black_text">
        <item name="android:textColor">#3F4244</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="larger_light_black_text">
        <item name="android:textColor">#3F4244</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="common_list_item_small_black_text">
        <item name="android:textColor">#3F4244</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- common text style gray list -->
    <style name="small_gray_text" parent="@style/gray_text_with_shadow">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="middle_gray_text" parent="@style/gray_text_with_shadow">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="large_gray_text" parent="@style/gray_text_with_shadow">
        <item name="android:textSize">18sp</item>
    </style>

</resources>